<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 
    android:orientation="vertical" >
    
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">"
        
        <TextView
            android:id="@+id/tvRn"
            android:layout_width="fill_parent"
            android:layout_height="75.0px"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="请对准"
            android:textSize="30sp" />

      </LinearLayout>
      
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">"

    <RelativeLayout
        android:id="@+id/cameraPreview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="220dp" >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="-220dp"
        android:orientation="vertical" >
     
           <LinearLayout
               android:layout_width="160.0px"
               android:layout_height="160.0px"
               android:layout_gravity="center_vertical|center_horizontal"
               android:layout_marginLeft="1dp"
               android:background="@drawable/border"
               android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivImageNow"
            android:layout_width="140.0px"
            android:layout_height="120px"
                 android:layout_marginTop="20px"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:src="@drawable/touxiang" />

        </LinearLayout>

                   <TextView
                       android:layout_width="fill_parent"
                       android:layout_height="75.0px"
                       android:layout_marginTop="10dp"
                       android:gravity="center"
                       android:text="@string/xiancz"
                       android:textSize="20sp" />
                   
         <LinearLayout
             android:layout_width="160.0px"
             android:layout_height="160.0px"
             android:layout_gravity="bottom|center_horizontal"
     
             android:layout_marginTop="5px"
             android:background="@drawable/border"
             android:orientation="vertical" >

        <ImageView
            android:id="@+id/ivIdCard"
                      android:layout_width="140.0px"
            android:layout_height="120.0px"     android:layout_marginTop="20px"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/touxiang" />
        
        </LinearLayout>
        
                      <TextView
                          android:layout_width="fill_parent"
                          android:layout_height="75.0px"
                          android:gravity="center"
                          android:text="@string/zhengjz"
                          android:textSize="20sp" />


    </LinearLayout>
    </LinearLayout>

</LinearLayout>


